@model MediaOrganiser1.Models.FileClass

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Media Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ContentType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContentType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category)
        </dd>
    </dl>

    @if (Model.Genre != null)
    {
        //for audio
        <audio controls src="data:audio/mp3;base64, @System.Convert.ToBase64String(Model.File)" />
    }

    else
    {
        //for image
        <img src="data:image;base64, @System.Convert.ToBase64String(Model.File)  "width="500" height="500" />

    }
</div>

